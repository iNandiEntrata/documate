{
  "name": "documate",
  "displayName": "documate",
  "description": "Code Documentation",
  "version": "0.0.1",
  "publisher": "iNandi",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "documate.author": {
          "type": "string",
          "default": "Your Name",
          "description": "Set the author (global) name to be auto-filled.",
          "scope": "resource"
        },
        "documate.version": {
          "type": "string",
          "default": "1.0.0",
          "description": "Set the version number (global) to be auto-filled.",
          "scope": "resource"
        },
        "documate.email": {
          "type": "string",
          "default": "email@example.com",
          "description": "Set the email (global) to be auto-filled.",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "extension.insertClassDocPhp",
        "title": "Class Document"
      },
      {
        "command": "extension.insertClassDocJS",
        "title": "Class Document"
      },
      {
        "command": "extension.insertMethodDocPhp",
        "title": "Method Document"
      },
      {
        "command": "extension.insertMethodDocJS",
        "title": "Method Document"
      },
      {
        "command": "extension.insertPropertyDocPhp",
        "title": "Property Document"
      },
      {
        "command": "extension.insertPropertyDocJS",
        "title": "Property Document"
      }
    ],
    "submenus": [
      {
        "id": "documate.context",
        "label": "DocuMate: Code Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "extension.insertClassDocPhp",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "extension.insertClassDocJS",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "documate.context",
          "group": "documateCustomGroup"
        }
      ],
      "documate.context": [
        {
          "command": "extension.insertClassDocPhp",
          "when": "editorLangId == php"
        },
        {
          "command": "extension.insertClassDocJS",
          "when": "editorLangId == javascript"
        },
        {
          "command": "extension.insertMethodDocPhp",
          "when": "editorLangId == php"
        },
        {
          "command": "extension.insertMethodDocJS",
          "when": "editorLangId == javascript"
        },
        {
          "command": "extension.insertPropertyDocPhp",
          "when": "editorLangId == php"
        },
        {
          "command": "extension.insertPropertyDocJS",
          "when": "editorLangId == javascript"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.21.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "vsce": "^2.15.0"
  }
}